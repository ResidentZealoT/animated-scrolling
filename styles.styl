@import "typographic"

typographic()

body
  margin-top 50px

nav
  background white
  .navbar-light
    font-family Poppins
  .navbar-brand
    font-size 20px
    color #000 !important
    font-weight bold

#showcase
  h1
    font-family Roboto
  .btn
    background red
    color white
    border-style solid
    border-width 1px
    border-color black
  .showcase-right
    text-align middle

#testimonial
  background #f1f1f1
  padding 50px 0 30px 0
  text-align center
  margin-top 40px
  p
    font-family Josefin sans
  P.customer
    font-size 18px
    color #666

#info1
  padding 40px 0 60px 0
  .info-left
    text-align middle
  h2
    font-family Roboto
  .btn
    background blue
    color white
    border-style solid
    border-width 1px
    border-color black

#info2
  margin 20px 0 60px 0
  text-align center

#contact
  background url("assets/main-background1.jpg")
  padding 40px
  color #fff
  border-top #333 2px solid
  border-bottom #333 2px solid

footer
  padding 30px
